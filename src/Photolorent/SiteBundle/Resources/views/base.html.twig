{% if body_class is not defined %}
    {% set body_class = 'default' %}
{% endif %}
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <title>{{ meta_title|default('meta.default.title'|trans) }} - {{ 'sitename'|trans }}</title>
        <meta name="description" content="{{ meta_description|default('meta.default.description'|trans) }}"/>
        <meta name="keywords" content="{{ meta_keywords|default('meta.default.keywords'|trans) }}"/>
        <meta name=”viewport” content=”width=device-width” />
        {% stylesheets
        'bundles/photolorentsite/css/screen.css'
        filter='cssrewrite,?yui_css'
        output='cache/assetic/css/all.css'
        %}
        <link href="{{ asset_url }}" rel="stylesheet" type="text/css" media="screen" />
        {% endstylesheets %}
        {% javascripts
            'bundles/snowcapcore/vendor/modernizr/modernizr.js'
            filter='?yui_js'
            output='cache/assetic/js/modernizr.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <link rel="shortcut icon" href="{{ asset("favicon.ico") }}"/>
    </head>
    <body class="{{ body_class }}">
        {% block body %}
        <div class="container">
            {% block container %}
                {% block messages %}
                    {% if app.session.flashbag.peekAll()|length > 0 %}
                        <div class="messages">
                            {% for type, flashes in app.session.flashbag.all() %}
                                <div class="flash flash-{{ type }}">
                                    <ul>
                                        {% for flash in flashes %}
                                            <li>{{ flash | raw }}</li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                {% endblock messages %}
                <section>
                    {% block content %}In the base template{% endblock content %}
                </section>
            {% endblock container %}
        </div>
        {% endblock body %}
        {% block javascripts %}
            <script type="text/javascript">
                var photolorent = {
                    'assets': {
                        'sight': '{{ asset('bundles/photolorentsite/images/sight.png') }}'
                    }
                };
            </script>
            {% javascripts
                'bundles/snowcapcore/vendor/jquery/jquery.js'
                'bundles/photolorentsite/js/vendor/jquery.mousewheel/jquery.mousewheel.js'
                'bundles/photolorentsite/js/plugins.js'
                'bundles/photolorentsite/js/screen.js'
                filter='?yui_js'
                output='cache/assetic/js/all.js'
            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
